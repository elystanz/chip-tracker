<head>
    <meta charset="UTF-8"></meta>
    <title>Chip Tracker!</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/style.css">
</head>

<body>

    <!-- header & navigation -->
    <header>
        <h1>
            <img src="../IMG_9107.JPG">
            Microchip Tracker!
        </h1>
        <nav>
            <ul>
                <li>
                    <a href="">Vet Login</a>
                </li>
                <li>
                    <a href="">Client Login</a>
                </li>
                <li>
                    <a href="">Contact Us</a>
                </li>
            </ul>
        </nav>
    </header>

    <!-- enter pet info to post data (vet only) -->
    <section class="add-pet">
        <form class="container">
            <!-- take in pet name and breed info to post -->
            <div class="input-group mb-3 row">
                <input type="text" class="form-control col" placeholder="Pet Name">
                <input type="text" class="form-control col" placeholder="Pet Breed">
            </div>
            <!-- take in radio box input to post -->
            <div class="microchip-input row">
                <div class="form-check form-check-inline col-3">
                    <input type="radio" class="form-check-input" name="inlineRadioOptions" id="inlineRadio1" value="option1">
                    <label class="form-check-label" for="inlineRadio1">Microchipped</label>
                </div>
                <div class="form-check form-check-inline col-3">
                    <input type="radio" class="form-check-input" name="inlineRadioOptions" id="inlineRadio1" value="option1">
                    <label class="form-check-label" for="inlineRadio1">Not Microchipped</label>
                </div>
                <!-- submit button to post pet to wall -->
                <button type="submit" class="btn btn-outline-secondary col-3">Add Pet</button>
            </div>
        </form>
    </section>

    <!-- enter client name to get pet information -- can be utilized with User search -->
    <section class="find-pets">
        <div class="container">
            <div class="input-group m-1 row">
                <input type="text" class="form-control col-10" placeholder="Client Name">
                <!-- submit button to get pet from wall -->
                <button type="submit" class="btn btn-outline-secondary col-2 mr-1" id="button-addon">Get Pet</button>
            </div>
        </div>
    </section>

    <!-- container that will dynamically generate pet info -- current text are placeholders -->
    <section class="view-pets">
        <div class="container">
            <div class="card">
                <div class="card-body">
                    <!-- this information will be dynamically created -->
                    <h5 class="card-title">Pet Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Owner/Client Name</h6>
                    <p class="card-text">Microchipped/Not Microchipped</p>
                </div>
            </div>
        </div>
    </section>

</body>

</html>